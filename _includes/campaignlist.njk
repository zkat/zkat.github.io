{%- css %}.campaignlist { counter-reset: start-from {{ (campaignlistCounter or campaigns.length) + 1 }} }{% endcss %}
<ol reversed class="campaignlist">
{% for campaign in campaigns | reverse %}
	<li class="campaignlist-item{% if post.url == url %} campaignlist-item-active{% endif %}">
		<a href="/campaigns/{{ campaign.name | slugify }}/" class="campaignlist-link">{{ campaign.name }}</a>
	</li>
{% endfor %}
</ol>


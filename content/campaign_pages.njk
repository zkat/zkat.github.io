---
layout: layouts/base.njk
pagination:
  data: campaigns
  size: 1
  alias: campaign
permalink: campaigns/{{ campaign.name | slugify }}/
eleventyComputed:
  title: "{{ campaign.name }}"
  description: Campaign page for {{ campaign.character.name }}
---

<h1>{{campaign.name}}</h1>

<h3>Character: <strong>{{ campaign.character.name }}</h3>

<ul>
  <li>Pronouns: {{ campaign.character.pronouns }}
  <li>Callsign: {{ campaign.character.callsign }}
  <li>{{ campaign.character.characteristics }}
</ul>

<h3>Vows</h3>
<ol>
  {% for vow in campaign.character.vows %}
    <li>{{ vow.name }}
  {% endfor %}
</ol>

<h3>Journal Entries</h3>
<ol>
{% for journal in journal_entries %}
  {% if journal.campaign == campaign.name %}
    <li><a href="/campaigns/{{ journal.campaign | slugify }}/{{ journal.title | slugify }}">{{journal.title}}</a></li>
  {% endif %}
{% endfor %}
</ol>
